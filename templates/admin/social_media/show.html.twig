{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ social_media.name }} - Détails{% endblock %}

{% block in_body %}
<div class="p-4 sm:p-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Détails du réseau social</h1>
        <div class="flex space-x-2 mt-4 md:mt-0">
            <a href="{{ path('admin.social.index') }}" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-600 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800">
                Retour à la liste
            </a>
            <a href="{{ path('admin.social.edit', {'id': social_media.id}) }}" class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 focus:outline-none dark:focus:ring-green-800">
                Modifier
            </a>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Informations de base</h3>
                    <dl class="divide-y divide-gray-200 dark:divide-gray-600">
                        <div class="py-3 sm:py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">ID</dt>
                            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2">{{ social_media.id }}</dd>
                        </div>
                        <div class="py-3 sm:py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom</dt>
                            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2">{{ social_media.name }}</dd>
                        </div>
                    </dl>
                </div>

                <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Détails</h3>
                    <dl class="divide-y divide-gray-200 dark:divide-gray-600">
                        <div class="py-3 sm:py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Lien</dt>
                            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2">
                                <a href="{{ social_media.lien }}" target="_blank" class="text-blue-600 dark:text-blue-400 hover:underline">
                                    {{ social_media.lien }}
                                </a>
                            </dd>
                        </div>
                        <div class="py-3 sm:py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Icône</dt>
                            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2">
                                {% if social_media.icon %}
                                    <div class="flex items-center">
                                        <i class="{{ social_media.icon }} text-xl mr-2"></i>
                                        <span>{{ social_media.icon }}</span>
                                    </div>
                                {% else %}
                                    <span class="text-gray-500 dark:text-gray-400">Aucune icône</span>
                                {% endif %}
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 px-6 py-3 flex justify-between items-center">
            {{ include('admin/social_media/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}