{% extends 'admin/base_admin.html.twig' %}

{% block title %}Détails du partenaire - {{ partner.name }}{% endblock %}

{% block in_body %}
<section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5 min-h-screen">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        <!-- Header with back button -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Détails du partenaire</h1>
            <a href="{{ path('admin.partner.index') }}" class="inline-flex items-center text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 font-medium rounded-lg text-sm px-4 py-2 dark:bg-gray-600 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:border-gray-800 dark:focus:ring-gray-800">
                <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0l4 4M1 5l4-4"/>
                </svg>
                Retour à la liste
            </a>
        </div>

        <!-- Details card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
            <!-- Partner header with logo -->
            <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700">
                <div class="flex flex-col md:flex-row items-center gap-6">
                    {% if partner.logo %}
                    <div class="w-32 h-32 rounded-lg bg-white p-2 flex items-center justify-center border border-gray-200 dark:border-gray-600">
                        <img src="{{ vich_uploader_asset(partner, 'image') }}" alt="Logo {{ partner.name }}" class="max-h-full max-w-full object-contain">
                    </div>
                    {% else %}
                    <div class="w-32 h-32 rounded-lg bg-gray-100 dark:bg-gray-600 flex items-center justify-center border border-gray-200 dark:border-gray-600">
                        <svg class="w-12 h-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    {% endif %}
                    <div class="text-center md:text-left">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{{ partner.name }}</h2>
                        <p class="text-gray-600 dark:text-gray-400">ID: {{ partner.id }}</p>
                    </div>
                </div>
            </div>

            <!-- Details content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Details section -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Informations</h3>
                        <dl class="space-y-4">
                            <div class="sm:flex sm:items-center">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 sm:w-1/3">ID</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:w-2/3">{{ partner.id }}</dd>
                            </div>
                            <div class="sm:flex sm:items-center">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 sm:w-1/3">Nom</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:w-2/3">{{ partner.name }}</dd>
                            </div>
                            <div class="sm:flex sm:items-center">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 sm:w-1/3">Logo</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:w-2/3">
                                    {% if partner.logo %}
                                        {{ partner.logo }}
                                    {% else %}
                                        <span class="text-gray-400 dark:text-gray-500">Aucun logo</span>
                                    {% endif %}
                                </dd>
                            </div>
                        </dl>
                    </div>

                    <!-- Logo preview section -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Aperçu du logo</h3>
                        <div class="flex items-center justify-center p-6 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600">
                            {% if partner.logo %}
                                <img src="{{ vich_uploader_asset(partner, 'image') }}" alt="Logo {{ partner.name }}" class="max-h-48 max-w-full object-contain">
                            {% else %}
                                <div class="text-center">
                                    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Aucun logo disponible</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions footer -->
            <div class="p-6 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700 flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3">
                <a href="{{ path('admin.partner.edit', {'id': partner.id}) }}" class="inline-flex items-center justify-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                    </svg>
                    Modifier
                </a>
                {{ include('admin/partner/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>
{% endblock %}