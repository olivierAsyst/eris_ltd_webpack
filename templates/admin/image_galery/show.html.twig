{% extends 'admin/base_admin.html.twig' %}

{% block title %}Image de {{ image_galery.lieu }}{% endblock %}

{% block in_body %}

<section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">

<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
        <img class="rounded-t-lg" src="{{ vich_uploader_asset(image_galery, 'image') }}" alt="" />
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Image de {{ image_galery.lieu }}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ image_galery.description }}</p>
        <div class="flex">
            {{ include('admin/image_galery/_delete_form.html.twig') }}
            <a class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 focus:outline-none dark:focus:ring-green-800 w-auto" href="{{ path('admin.galery.edit', {'id': image_galery.id}) }}">Modifier</a>
        </div>
    </div>
</div>

<a class="text-green-800" href="{{ path('admin.galery.index') }}">Retour a la liste</a>
</div>
</section>
{% endblock %}
