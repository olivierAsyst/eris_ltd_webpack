{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier l'image{% endblock %}

{% block in_body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <!-- En-tête -->
        <div class="bg-green-600 px-6 py-4 border-b border-gray-200">
            <h1 class="text-2xl font-semibold text-white">Modifier l'image</h1>
        </div>

        <!-- Contenu -->
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-6">
                    <!-- Champ Lieu -->
                    <div>
                        {{ form_label(form.lieu, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.lieu, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500'}}) }}
                        {{ form_errors(form.lieu) }}
                    </div>

                    <!-- Champ Description -->
                    <div>
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500', 'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <!-- Champ Image -->
                    <div>
                        {{ form_label(form.image, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        
                        <!-- Aperçu de l'image actuelle -->
                        {% if form.vars.data.image %}
                            <div class="mt-2 mb-4">
                                <img src="{{ vich_uploader_asset(form.vars.data, 'image') }}" alt="Image actuelle" class="h-40 rounded-md object-cover">
                                <p class="mt-1 text-sm text-gray-500">Image actuelle</p>
                            </div>
                        {% endif %}

                        {{ form_widget(form.image, {'attr': {'class': 'mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none'}}) }}
                        {{ form_errors(form.image) }}
                        <p class="mt-1 text-sm text-gray-500">Formats acceptés : JPG, PNG, WEBP (max 10Mo)</p>
                    </div>
                </div>

                <!-- Protection CSRF -->
                {{ form_rest(form) }}

                <!-- Boutons -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a href="{{ path('admin.galery.index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        ← Retour à la liste
                    </a>

                    <div class="flex space-x-4">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            Mettre à jour
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}

            <!-- Formulaire de suppression -->
            <div class="mt-8 pt-8 border-t border-gray-200">
                {{ include('admin/image_galery/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
