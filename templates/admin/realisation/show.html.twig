{% extends 'admin/base_admin.html.twig' %}

{% block title %}Admin | Réalisation{% endblock %}

{% block in_body %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2 border-green-200">Détails de la réalisation</h1>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr>
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">ID</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ realisation.id }}</td>
                        </tr>
                        <tr>
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">Nom</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ realisation.name }}</td>
                        </tr>
                        <tr>
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">Description</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ realisation.description }}</td>
                        </tr>
                        <tr>
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">Image</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% if realisation.imageUrl %}
                                    <div class="mt-2">
                                        <img src="{{ vich_uploader_asset(realisation, 'image') }}" 
                                             alt="{{ realisation.name }}" 
                                             class="h-32 w-auto object-cover rounded-md border border-gray-200">
                                        <div class="mt-2 text-xs text-gray-500">
                                            URL: {{ realisation.imageUrl }}
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-gray-400">Aucune image</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="flex justify-between items-center pt-6 mt-6 border-t border-gray-200">
                <div class="space-x-4">
                    <a href="{{ path('admin.realisation.index') }}" class="inline-flex items-center text-green-600 hover:text-green-800 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                        </svg>
                        Retour à la liste
                    </a>

                    <a href="{{ path('admin.realisation.edit', {'id': realisation.id}) }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                        </svg>
                        Modifier
                    </a>
                </div>

                <div class="ml-4">
                    {{ include('admin/realisation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}