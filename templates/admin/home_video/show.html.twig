{% extends 'admin/base_admin.html.twig' %}

{% block title %}LA vidéo{% endblock %}

{% block in_body %}
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-green-600 px-6 py-4 border-b border-gray-200">
                <h1 class="text-2xl font-semibold text-white">Détails de la vidéo</h1>
            </div>
            
            <div class="p-6">
                <table class="min-w-full divide-y divide-gray-200">
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr class="hover:bg-gray-50">
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">ID</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ home_video.id }}</td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">Nom</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ home_video.name }}</td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 bg-gray-50">URL de la vidéo</th>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 break-all">{{ home_video.videoUrl }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="flex items-center justify-between mt-6 pt-6 border-t border-gray-200">
                    <a href="{{ path('admin.video.index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        ← Retour à la liste
                    </a>

                    <div class="flex space-x-4">
                        <a href="{{ path('admin.video.edit', {'id': home_video.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            Modifier
                        </a>

                        {{ include('admin/home_video/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}