{% extends 'base.html.twig' %}

{% block title %}Contactez-nous | ERIS SARL{% endblock %}

{% block body %}
<section class="relative py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-green-500"></div>
    <div class="absolute top-20 right-20 w-32 h-32 rounded-full bg-blue-100 opacity-20 blur-3xl"></div>
    <div class="absolute bottom-10 left-10 w-40 h-40 rounded-full bg-green-100 opacity-20 blur-3xl"></div>
    
    <div class="mx-auto max-w-7xl px-5 sm:px-6 lg:px-8">
        <!-- Header section -->
        <div class="text-center mb-16">
            <span class="inline-block px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-full mb-4">Nous contacter</span>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 font-manrope leading-tight mb-4">
                Parlons de votre <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-green-500">projet</span>
            </h1>
            <div class="max-w-2xl mx-auto">
                <p class="text-lg text-gray-600 leading-relaxed">
                    Que vous ayez une question, un projet à discuter ou simplement envie de dire bonjour, notre équipe est à votre écoute.
                </p>
            </div>
        </div>

        <!-- Contact information -->
        <div class="flex flex-col lg:flex-row gap-12 mb-16">
            <!-- Contact details -->
            <div class="lg:w-1/2">
                <div class="bg-white rounded-2xl shadow-lg p-8 md:p-10 border border-gray-100">
                    <div class="mb-10">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">Coordonnées</h2>
                        
                        <div class="space-y-8">
                            <!-- Email -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0 bg-blue-50 rounded-lg p-3 mr-4">
                                    <i class="las la-envelope text-2xl text-blue-600"></i>
                                </div>
                                <div>
                                    <h3 class="text-sm font-medium text-gray-500 mb-1">Email</h3>
                                    <a href="mailto:erisrdc.sarl@gmail.com" class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors">erisrdc.sarl@gmail.com</a>
                                </div>
                            </div>
                            
                            <!-- Phone -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0 bg-green-50 rounded-lg p-3 mr-4">
                                    <i class="las la-phone text-2xl text-green-600"></i>
                                </div>
                                <div>
                                    <h3 class="text-sm font-medium text-gray-500 mb-1">Téléphone</h3>
                                    <a href="tel:+243978113552" class="text-xl font-semibold text-gray-800 hover:text-green-600 transition-colors">+243 978 113 552</a>
                                </div>
                            </div>
                            
                            <!-- Contact button -->
                            <div class="pt-4">
                                <a href="#contact-form" class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-full text-white bg-gradient-to-r from-blue-600 to-green-500 hover:from-blue-700 hover:to-green-600 transition-all shadow-lg hover:shadow-xl">
                                    Envoyer un message
                                    <i class="las la-arrow-right ml-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Contact form -->
            <div class="lg:w-1/2" id="contact-form">
                <div class="bg-white rounded-2xl shadow-lg p-8 md:p-10 border border-gray-100">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Envoyez-nous un message</h2>
                    
                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="first-name" class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
                                <input type="text" id="first-name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" placeholder="Votre prénom">
                            </div>
                            <div>
                                <label for="last-name" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
                                <input type="text" id="last-name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" placeholder="Votre nom">
                            </div>
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <input type="email" id="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" placeholder="votre@email.com">
                        </div>
                        
                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
                            <input type="text" id="subject" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" placeholder="Objet de votre message">
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                            <textarea id="message" rows="5" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" placeholder="Votre message..."></textarea>
                        </div>
                        
                        <div>
                            <button type="submit" class="w-full flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-white bg-gradient-to-r from-blue-600 to-green-500 hover:from-blue-700 hover:to-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all shadow-md hover:shadow-lg">
                                Envoyer le message
                                <i class="las la-paper-plane ml-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Locations -->
        <div class="mb-16">
            <h2 class="text-3xl font-bold text-gray-900 text-center mb-10">Nos implantations</h2>
            
            <div class="grid lg:grid-cols-2 gap-8">
                <!-- Goma -->
                <div class="relative rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-gray-900/30 z-10"></div>
                    <img src="images/goma.jpg" alt="Bureau de Goma" class="w-full h-96 object-cover">
                    <div class="absolute bottom-0 left-0 z-20 p-8 text-white">
                        <h3 class="text-2xl font-bold mb-2">Goma</h3>
                        <p class="text-lg opacity-90">142 AV. FAGOP, Q. Kyeshero</p>
                        <div class="mt-4">
                            <a href="#" class="inline-flex items-center text-sm font-medium text-white hover:text-blue-200 transition-colors">
                                <i class="las la-map-marker-alt mr-2"></i>
                                Voir sur la carte
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Bukavu -->
                <div class="relative rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-gray-900/30 z-10"></div>
                    <img src="images/bukavu.jpg" alt="Bureau de Bukavu" class="w-full h-96 object-cover">
                    <div class="absolute bottom-0 left-0 z-20 p-8 text-white">
                        <h3 class="text-2xl font-bold mb-2">Bukavu</h3>
                        <p class="text-lg opacity-90">101 Unter den Linden, Mitte District</p>
                        <div class="mt-4">
                            <a href="#" class="inline-flex items-center text-sm font-medium text-white hover:text-blue-200 transition-colors">
                                <i class="las la-map-marker-alt mr-2"></i>
                                Voir sur la carte
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}